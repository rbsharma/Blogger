<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - BLOGGER APP</title>
    @Styles.Render("~/bundles/styles")
    <script src="~/scripts/beautifyTime.js"></script>
</head>
<body style="font-family:monospace">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("BLOGGER", "Index", "Blogs", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    @*if session exists*@
                    @{Html.RenderPartial("_Account");}
                    @*if session does not exist*@
                    @{Html.RenderPartial("_Authentication");}
                </ul>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row" style="margin-top:100px;">
            @RenderBody()
        </div>

        <footer class="sticky-footer">
            <hr />
            <p>&copy; @DateTime.Now.Year - BLOGGER APP</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/scripts")
    
</body>
</html>