<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - BLOGGER</title>
    @Styles.Render("~/bundles/styles")
</head>
<body style="font-family:monospace">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("BLOGGER", "Index", "Blogs", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    @*if session exists*@
                    @if (Request.Cookies["auth"] != null)
                    {
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                @Session["user"]
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a href="@Url.Action("Logout", "Auth")" class="">
                                        <span class="glyphicon glyphicon-lock"></span>
                                        LOGOUT
                                    </a>
                                </li>
                                <li><a href="#">Page 1-2</a></li>
                            </ul>
                        </li>
                    }
                    @*if session does not exist*@
                    @if (Request.Cookies["auth"] == null)
                    {
                        <li>
                            <a href="@Url.Action("Register", "Auth")" class="navbar-brand">
                                <span class="glyphicon glyphicon-user"></span>
                                REGISTER
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("Login", "Auth")" class="navbar-brand">
                                <span class="glyphicon glyphicon-lock"></span>
                                LOGIN
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row" style="margin-top:100px;">
            @RenderBody()
        </div>

        <footer class="sticky-footer">
            <hr />
            <p>&copy; @DateTime.Now.Year - BLOGGER</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/scripts")
</body>
</html>