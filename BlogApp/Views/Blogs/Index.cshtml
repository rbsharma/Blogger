@using BlogApp.Models
@model IEnumerable<Post>

@{
    ViewBag.Title = "Index";
}


@*Left Container*@
<div class="col-xs-12 col-md-9">
    @if (ViewBag.searchInput != null)
    {
        <h2>
            Found <b>
                @Model.Count().ToString()
            </b> results for <b>
                @ViewBag.searchInput
            </b>
        </h2>
    }


    @foreach (var item in Model)
    {
        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6" onclick="location.href='@Url.Action("Blog","Blogs",new { id = item.Id })'">
            <div class="panel panel-primary content">
                <div class="panel-heading">
                    @item.Title
                </div>
                <div class="panel-body panel-body-custom">
                    @item.Description
                </div>
                <div class="panel-footer">
                    @item.PublishedAt
                </div>
            </div>
        </div>
    }

</div>

@*//Right Container*@
<div class="hidden-xs hidden-sm visible-md-block col-md-3 visible-lg-block col-lg-3 fixed-bar-right">
    @{ Html.RenderPartial("_FixedRightBar");}
</div>


